<h1>Add Your Recipe</h1>
<br>
<%= form_for @recipe do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title%> <br>

  <%=f.fields_for :ingredients do |ing| %>
    <%= ing.label :ingredient%>
    <%= ing.text_field :name %> <br>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity%>
    <br>

  <% end %> 
  <br>  
  <%=f.submit %>
<%end%>

